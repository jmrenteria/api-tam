<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/NewUser"
        android:textColor="@color/dark_red"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="57dp" />

    <EditText
        android:id="@+id/addName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="174dp" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_red"
        android:text="@string/Create"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="455dp" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/Back"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddUser"
        app:layout_constraintTop_toTopOf="@+id/btnAddUser"
        app:layout_constraintVertical_bias="0.666"
        tools:layout_editor_absoluteX="224dp" />

    <EditText
        android:id="@+id/addUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addName"
        app:layout_constraintStart_toStartOf="@+id/addName"
        tools:layout_editor_absoluteY="241dp" />

    <EditText
        android:id="@+id/addRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/Rol"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/addUsername"
        app:layout_constraintStart_toStartOf="@+id/addUsername"
        tools:layout_editor_absoluteY="314dp" />

</androidx.constraintlayout.widget.ConstraintLayout>